    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4",
    "@vitest/coverage-v8": "^3",
    "autoprefixer": "^10.4.24",
    "eslint": "^9",
    "eslint-config-next": "^15",
    "eslint-config-prettier": "^10",
    "eslint-plugin-tailwindcss": "^3",
    "husky": "^9.1.7",
    "jsdom": "^26",
    "lint-staged": "^16.2.7",
